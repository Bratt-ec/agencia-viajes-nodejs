extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center= pagina
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimonios
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un testimonial
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje
            
            .row.justify-content-center.col 
                .col-md-8   
                    form(action="/testimonios", method="post")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Escribe tu nombre...", name="nombre", class="form-control", value= nombre)
                        .form-group
                            label(for="correo") Correo
                            input#correo(type="text", placeholder="Escribe tu correo...", name="correo", class="form-control", value= correo)
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(name="mensaje", cols="30", rows="3", class="form-control", placeholder="Escribe tu mensaje...")= mensaje
                        
                        input.btn.btn-success.btn-block(type="submit", value="Publicar rese√±a")
            .row.pt-3.col-md-12
                if(respuesta)
                    .alert.col.alert-success= respuesta